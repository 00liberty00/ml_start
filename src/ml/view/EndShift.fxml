<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="630.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ml.controller.EndShiftController">
   <children>
      <Label layoutX="13.0" layoutY="149.0" text="Сумма наличных в кассе">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
      </Label>
      <TextField fx:id="sumCash" alignment="CENTER" layoutX="13.0" layoutY="192.0" onAction="#getSumCash" prefHeight="60.0" prefWidth="270.0" text="0.00">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </TextField>
      <Label layoutX="338.0" layoutY="149.0" text="Выручка">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
      </Label>
      <TextField fx:id="proceedsText" alignment="CENTER" editable="false" layoutX="338.0" layoutY="192.0" onAction="#ok" prefHeight="60.0" prefWidth="270.0">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </TextField>
      <Button fx:id="ok" layoutX="308.0" layoutY="290.0" mnemonicParsing="false" onAction="#ok" prefHeight="68.0" prefWidth="302.0" text="OK">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Button>
      <Label layoutX="236.0" layoutY="14.0" text="Конец смены">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
      </Label>
      <DatePicker fx:id="datePicker" layoutX="13.0" layoutY="88.0" onAction="#getDate" />
      <Label layoutX="13.0" layoutY="46.0" text="Введите дату">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
      </Label>
      <Label fx:id="info" layoutX="13.0" layoutY="274.0" text="Введите сумму и нажмите ENTER" textFill="RED">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
