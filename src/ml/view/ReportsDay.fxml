<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="borderPane" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ml.controller.ReportsDayController">
   <top>
      <Pane BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="30.0" layoutY="49.0" text="Выберите дату">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font>
            </Label>
            <DatePicker fx:id="dateReport" layoutX="30.0" layoutY="105.0" onAction="#getDate" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
      </Pane>
   </top>
   <center>
      <Pane BorderPane.alignment="CENTER">
         <children>
            <TableView fx:id="tableReportsDay" editable="true" onMouseClicked="#viewReports">
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <columns>
                  <TableColumn fx:id="sumInReportsColumn" prefWidth="150.0" text="Ввод денег" />
                  <TableColumn fx:id="sumOutReportsColumn" prefWidth="150.0" text="Вывод денег" />
                  <TableColumn fx:id="invoiceReportsColumn" prefWidth="150.0" text="Сумма накладной" />
                  <TableColumn fx:id="arrivalReportsColumn" prefWidth="130.0" text="Сумма прихода" visible="false" />
                  <TableColumn fx:id="cancelReportsColumn" minWidth="0.0" prefWidth="150.0" text="Сумма списания" />
                  <TableColumn fx:id="noteReportsColumn" prefWidth="250.0" text="Описание" />
                  <TableColumn fx:id="dateReportsColumn" prefWidth="150.0" text="Дата" />
                  <TableColumn fx:id="numberReportsColumn" prefWidth="100.0" text="Номер" visible="false" />
               </columns>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </TableView>
         </children>
      </Pane>
   </center>
   <bottom>
      <Pane BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="14.0" text="Выручка">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font>
            </Label>
            <Label fx:id="cashLabel" layoutX="14.0" layoutY="60.0" text="Наличные">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font>
            </Label>
            <Label layoutX="14.0" layoutY="114.0" text="Сумма в товаре">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font>
            </Label>
            <Label layoutX="14.0" layoutY="170.0" text="Прибыль">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font>
            </Label>
            <Label fx:id="proceeds" layoutX="231.0">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font>
            </Label>
            <Label fx:id="cash" layoutX="231.0" layoutY="60.0">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font>
            </Label>
            <Label fx:id="sumGoods" layoutX="231.0" layoutY="114.0">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font>
            </Label>
            <Label fx:id="profit" layoutX="231.0" layoutY="170.0">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font>
            </Label>
            <Button fx:id="okReports" layoutX="786.0" layoutY="120.0" mnemonicParsing="false" onAction="#okReportsDay" prefHeight="68.0" prefWidth="302.0" text="OK">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" top="10.0" />
         </BorderPane.margin>
      </Pane>
   </bottom>
</BorderPane>
